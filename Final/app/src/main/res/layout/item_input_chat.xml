<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:id="@+id/llInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_input_chat"
        android:elevation="@dimen/dp_16"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ibEmojiSticker"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left|center_vertical|center_horizontal|center"
            android:background="@drawable/bg_ripple_animation_button_back"
            android:paddingLeft="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            android:scaleType="center"
            android:src="@drawable/ic_emotion_input_selection" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edtChat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:autoLink="none"
                android:background="@color/transparent"
                android:fontFamily="@font/roboto_regular"
                android:hint="@string/input_chat"
                android:inputType="textMultiLine"
                android:maxHeight="@dimen/dp_100"
                android:maxLines="4"
                android:minHeight="@dimen/dp_48"
                android:paddingStart="@dimen/dp_8"
                android:textColor="@color/gray_900"
                android:scrollbars="none"
                android:singleLine="true"
                android:textColorHint="@color/gray_400"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tvCountCharacter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="4dp"
                android:textSize="@dimen/sp_9"
                android:visibility="invisible" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/ibMore"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left|center_vertical|center_horizontal|center"
            android:background="@drawable/bg_ripple_animation_button_back"
            android:paddingLeft="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            android:scaleType="center"
            android:src="@drawable/ic_attach_input_selection"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/btnMic"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left|center_vertical|center_horizontal|center"
            android:background="@drawable/bg_ripple_animation_button_back"
            android:paddingLeft="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            android:scaleType="center"
            android:src="@drawable/ic_voice_input_selection"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/ivGallery"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left|center_vertical|center_horizontal|center"
            android:paddingLeft="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            android:src="@drawable/ic_image_input_selection"
            app:tint="@color/gray_400" />

        <ImageButton
            android:id="@+id/ibSend"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left|center_vertical|center_horizontal|center"
            android:background="@drawable/bg_ripple_animation_button_back"
            android:paddingLeft="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            android:scaleType="center"
            android:src="@drawable/ic_send_input_off"
            android:visibility="gone"
            app:tint="@color/blue_700" />

    </LinearLayout>

</layout>
