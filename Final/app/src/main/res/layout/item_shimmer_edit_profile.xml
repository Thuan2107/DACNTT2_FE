<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_100"
        android:orientation="vertical"
        tools:context=".ui.activity.EditProfileActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/rllAvatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/dp_16">

                <RelativeLayout
                    android:layout_width="@dimen/dp_72"
                    android:layout_height="@dimen/dp_72"
                    tools:ignore="UselessParent">

                    <ImageView
                        android:id="@+id/ivAvatarUser"
                        android:layout_width="@dimen/dp_96"
                        android:layout_height="@dimen/dp_96"
                        android:layout_centerInParent="true"
                        android:contentDescription="@string/description_place_image"
                        android:src="@drawable/ic_user_default" />

                    <ImageView
                        android:id="@+id/ivAvatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_shimmer"
                        android:contentDescription="@string/description_place_image" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_2"
                    android:orientation="horizontal">

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/dp_8"
                        android:layout_weight="1"
                        android:background="@drawable/bg_shimmer"
                        android:inputType="text"
                        android:maxLength="50"
                        android:maxLines="1"
                        android:textColor="@color/gray" />

                    <ImageButton
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/dp_8"
                        android:layout_marginEnd="@dimen/dp_16"
                        android:background="@drawable/bg_shimmer_50"
                        android:contentDescription="@string/description_place_image" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_2"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etNameUser"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/dp_8"
                        android:layout_weight="1"
                        android:background="@drawable/bg_shimmer"
                        android:inputType="text"
                        android:maxLength="50"
                        android:maxLines="1"
                        android:textColor="@color/gray" />

                    <ImageButton
                        android:id="@+id/ibName"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/dp_8"
                        android:layout_marginEnd="@dimen/dp_16"
                        android:background="@drawable/bg_shimmer_50"
                        android:contentDescription="@string/description_place_image" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/gray_100"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_8">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_16"
                        android:background="@drawable/bg_shimmer_50"
                        android:contentDescription="@string/description_place_image" />

                    <TextView
                        android:layout_width="@dimen/dp_48"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dp_8"
                        android:layout_marginEnd="@dimen/dp_8"
                        android:gravity="center"
                     android:background="@color/shimmer"
                        android:textColor="@color/gray_500"
                        android:textStyle="normal" />

                    <LinearLayout
                        android:id="@+id/llEditGender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvTextGender"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="@color/black" />

                        <ImageView

                            android:layout_width="@dimen/dp_160"
                            android:layout_height="@dimen/dp_16"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/dp_8"
                            android:background="@drawable/bg_shimmer"
                            android:contentDescription="@string/description_place_image" />
                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/dp_32"
                    android:layout_height="@dimen/dp_32"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:contentDescription="@string/description_place_image"
                    android:background="@drawable/bg_shimmer_50" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_8">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_16"
                        android:background="@drawable/bg_shimmer_50"
                        android:contentDescription="@string/description_place_image" />

                    <TextView
                        android:layout_width="@dimen/dp_48"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dp_8"
                        android:layout_marginEnd="@dimen/dp_8"
                        android:gravity="center"
                        android:background="@color/shimmer"
                        android:textColor="@color/gray_500"
                        android:textStyle="normal" />

                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="@color/black" />

                        <ImageView

                            android:layout_width="@dimen/dp_160"
                            android:layout_height="@dimen/dp_16"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/dp_8"
                            android:background="@drawable/bg_shimmer"
                            android:contentDescription="@string/description_place_image" />
                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/dp_32"
                    android:layout_height="@dimen/dp_32"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:contentDescription="@string/description_place_image"
                    android:background="@drawable/bg_shimmer_50" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_8">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_16"
                        android:background="@drawable/bg_shimmer_50"
                        android:contentDescription="@string/description_place_image" />

                    <TextView
                        android:layout_width="@dimen/dp_48"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dp_8"
                        android:layout_marginEnd="@dimen/dp_8"
                        android:gravity="center"
                        android:background="@color/shimmer"
                        android:textColor="@color/gray_500"
                        android:textStyle="normal" />

                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="@color/black" />

                        <ImageView

                            android:layout_width="@dimen/dp_160"
                            android:layout_height="@dimen/dp_16"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/dp_8"
                            android:background="@drawable/bg_shimmer"
                            android:contentDescription="@string/description_place_image" />
                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/dp_32"
                    android:layout_height="@dimen/dp_32"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:contentDescription="@string/description_place_image"
                    android:background="@drawable/bg_shimmer_50" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_8">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_16"
                        android:background="@drawable/bg_shimmer_50"
                        android:contentDescription="@string/description_place_image" />

                    <TextView
                        android:layout_width="@dimen/dp_48"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dp_8"
                        android:layout_marginEnd="@dimen/dp_8"
                        android:gravity="center"
                        android:background="@color/shimmer"
                        android:textColor="@color/gray_500"
                        android:textStyle="normal" />

                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="@color/black" />

                        <ImageView

                            android:layout_width="@dimen/dp_160"
                            android:layout_height="@dimen/dp_16"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/dp_8"
                            android:background="@drawable/bg_shimmer"
                            android:contentDescription="@string/description_place_image" />
                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/dp_32"
                    android:layout_height="@dimen/dp_32"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:contentDescription="@string/description_place_image"
                    android:background="@drawable/bg_shimmer_50" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_8">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_16"
                        android:background="@drawable/bg_shimmer_50"
                        android:contentDescription="@string/description_place_image" />

                    <TextView
                        android:layout_width="@dimen/dp_48"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dp_8"
                        android:layout_marginEnd="@dimen/dp_8"
                        android:gravity="center"
                        android:background="@color/shimmer"
                        android:textColor="@color/gray_500"
                        android:textStyle="normal" />

                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="@color/black" />

                        <ImageView

                            android:layout_width="@dimen/dp_160"
                            android:layout_height="@dimen/dp_16"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/dp_8"
                            android:background="@drawable/bg_shimmer"
                            android:contentDescription="@string/description_place_image" />
                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/dp_32"
                    android:layout_height="@dimen/dp_32"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:contentDescription="@string/description_place_image"
                    android:background="@drawable/bg_shimmer_50" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                android:background="@color/white"
                android:baselineAligned="false"
                android:padding="@dimen/dp_16">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    tools:ignore="UselessParent">

                    <TextView
                        android:id="@+id/tvAddressCity"
                        android:layout_width="160dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dp_80"
                        android:gravity="center"
                        android:background="@color/shimmer"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14"
                        android:textStyle="normal" />

                    <ImageView
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/dp_8"
                        android:background="@drawable/bg_shimmer_50"
                        tools:ignore="ContentDescription" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llDistrict"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                android:background="@color/white"
                android:baselineAligned="false"
                android:padding="@dimen/dp_16">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    tools:ignore="UselessParent">

                    <TextView
                        android:layout_width="160dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dp_80"
                        android:gravity="center"
                        android:background="@color/shimmer"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14"
                        android:textStyle="normal" />

                    <ImageView
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/dp_8"
                        android:background="@drawable/bg_shimmer_50"
                        tools:ignore="ContentDescription" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llStreet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                android:background="@color/white"
                android:baselineAligned="false"
                android:padding="@dimen/dp_16">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    tools:ignore="UselessParent">

                    <TextView
                        android:layout_width="160dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dp_80"
                        android:gravity="center"
                        android:background="@color/shimmer"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14"
                        android:textStyle="normal" />

                    <ImageView
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/dp_8"
                        android:background="@drawable/bg_shimmer_50"
                        tools:ignore="ContentDescription" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>