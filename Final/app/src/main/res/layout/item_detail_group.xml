<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <!--                CHI TIET GROUP-->

    <LinearLayout
        android:id="@+id/llGroupChat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/llGroupCalendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_0_5"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/dp_16"
            android:visibility="gone">

            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_gravity="center"
                android:contentDescription="@string/description_place_image"
                android:src="@drawable/ic_calendar"
                app:tint="@color/gray_900" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_weight="1"
                android:drawableEnd="@drawable/ic_back_white"
                android:drawablePadding="@dimen/dp_8"
                android:gravity="center|start"
                android:text="@string/group_calendar"
                android:textColor="@color/gray_900"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_gravity="center"
                android:contentDescription="@string/description_place_image"
                android:src="@drawable/ic_back_chat"
                app:tint="@color/gray_900" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/listPinned"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_0_5"
            android:background="@color/white"
            android:orientation="horizontal"
            android:visibility="gone"
            android:padding="@dimen/dp_16">

            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_gravity="center"
                android:contentDescription="@string/description_place_image"
                android:src="@drawable/ic_pin"
                app:tint="@color/gray_900" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_weight="1"
                android:drawableEnd="@drawable/ic_back_white"
                android:drawablePadding="@dimen/dp_8"
                android:gravity="center|start"
                android:text="@string/pinned_messages"
                android:textColor="@color/gray_900"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_gravity="center"
                android:contentDescription="@string/description_place_image"
                android:src="@drawable/ic_back_chat"
                app:tint="@color/gray_900" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSettingGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/dp_16"
            android:visibility="gone">

            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_gravity="center"
                android:contentDescription="@string/description_place_image"
                android:src="@drawable/ic_setting"
                app:tint="@color/gray_900" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_weight="1"
                android:drawableEnd="@drawable/ic_back_white"
                android:drawablePadding="@dimen/dp_8"
                android:gravity="center|start"
                android:text="@string/group_settings"
                android:textColor="@color/gray_900"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_gravity="center"
                android:contentDescription="@string/description_place_image"
                android:src="@drawable/ic_back_chat"
                app:tint="@color/gray_900" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llListMember"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/dp_16">

            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_gravity="center"
                android:contentDescription="@string/description_place_image"
                android:src="@drawable/ic_view_user"
                app:tint="@color/gray_900" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_weight="1"
                android:drawableEnd="@drawable/ic_back_white"
                android:drawablePadding="@dimen/dp_8"
                android:gravity="center|start"
                android:text="@string/view_members"
                android:textColor="@color/gray_900"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_gravity="center"
                android:contentDescription="@string/description_place_image"
                android:src="@drawable/ic_back_chat"
                app:tint="@color/gray_900" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llLinkChat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_0_5"
            android:background="@color/white"
            android:orientation="horizontal"
            android:visibility="visible"
            android:padding="@dimen/dp_16">

            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_gravity="center"
                android:contentDescription="@string/description_place_image"
                android:src="@drawable/ic_link"
                app:tint="@color/gray_900" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_weight="1"
                android:drawableEnd="@drawable/ic_back_white"
                android:drawablePadding="@dimen/dp_8"
                android:gravity="center|start"
                android:text="@string/link_to_join_the_group"
                android:textColor="@color/gray_900"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_gravity="center"
                android:contentDescription="@string/description_place_image"
                android:src="@drawable/ic_back_chat"
                app:tint="@color/gray_900" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llPinChat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="@dimen/dp_16"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_gravity="center"
                    android:contentDescription="@string/description_place_image"
                    android:src="@drawable/ic_pin"
                    app:tint="@color/gray_900" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/dp_8"
                    android:layout_weight="1"
                    android:drawableEnd="@drawable/ic_back_white"
                    android:drawablePadding="@dimen/dp_8"
                    android:gravity="center|start"
                    android:text="@string/chat_pins"
                    android:textColor="@color/gray_900"
                    android:textSize="@dimen/sp_14" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/swSettingPersonal"
                    android:layout_width="@dimen/dp_56"
                    android:layout_height="@dimen/dp_32" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llHideChat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_0_5"
                android:background="@color/white"
                android:orientation="horizontal"
                android:visibility="gone"
                android:padding="@dimen/dp_16">

                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_gravity="center"
                    android:contentDescription="@string/description_place_image"
                    android:src="@drawable/ic_eye_off"
                    app:tint="@color/gray_900" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/dp_8"
                    android:layout_weight="1"
                    android:drawableEnd="@drawable/ic_back_white"
                    android:drawablePadding="@dimen/dp_8"
                    android:gravity="center|start"
                    android:text="@string/hide_chat"
                    android:textColor="@color/gray_900"
                    android:textSize="@dimen/sp_14" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/swHideChat"
                    android:layout_width="@dimen/dp_56"
                    android:layout_height="@dimen/dp_32"
                    android:layout_gravity="center" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSettingPersonalGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_0_5"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="@dimen/dp_16"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_gravity="center"
                    android:contentDescription="@string/description_place_image"
                    android:src="@drawable/ic_setting"
                    app:tint="@color/gray_900" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/dp_8"
                    android:layout_weight="1"
                    android:drawableEnd="@drawable/ic_back_white"
                    android:drawablePadding="@dimen/dp_8"
                    android:gravity="center|start"
                    android:text="@string/privacy_setting"
                    android:textColor="@color/gray_900"
                    android:textSize="@dimen/sp_14"
                    app:tint="@color/gray_900" />

                <ImageView
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:layout_gravity="center"
                    android:contentDescription="@string/description_place_image"
                    android:src="@drawable/ic_back_chat"
                    app:tint="@color/gray_900" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/llTransferGroupLeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_0_5"
            android:background="@color/white"
            android:orientation="horizontal"
            android:visibility="gone"
            android:padding="@dimen/dp_16">

            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_gravity="center"
                android:contentDescription="@string/description_place_image"
                android:src="@drawable/ic_key_chat"
                app:tint="@color/gray_900" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_weight="1"
                android:drawableEnd="@drawable/ic_back_white"
                android:drawablePadding="@dimen/dp_8"
                android:gravity="center|start"
                android:text="@string/title_dialog_policy_right"
                android:textColor="@color/gray_900"
                android:textSize="@dimen/sp_14"
                app:tint="@color/gray_900" />

            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_gravity="center"
                android:contentDescription="@string/description_place_image"
                android:src="@drawable/ic_back_chat"
                app:tint="@color/gray_900" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llCapacityChat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_0_5"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/dp_16"
            android:visibility="gone">

            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_gravity="center"
                android:contentDescription="@string/description_place_image"
                android:src="@drawable/ic_chart"
                app:tint="@color/gray_900" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_weight="1"
                android:drawablePadding="@dimen/dp_8"
                android:gravity="center|start"
                android:text="@string/chat_capacity"
                android:textColor="@color/gray_900"
                android:textSize="@dimen/sp_14"
                tools:ignore="TooManyViews" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llDeleteHistoryChat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_0_5"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/dp_16">

            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_gravity="center"
                android:contentDescription="@string/description_place_image"
                android:src="@drawable/ic_trash_chat"
                app:tint="@color/gray_900" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_weight="1"
                android:drawablePadding="@dimen/dp_8"
                android:gravity="center|start"
                android:text="@string/clear_chat_history"
                android:textColor="@color/gray_900"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llOutGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_0_5"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/dp_16">

            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp_4"
                android:contentDescription="@string/description_place_image"
                android:src="@drawable/ic_account_logout"
                app:tint="@color/main_bg" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp_4"
                android:layout_weight="1"
                android:drawableEnd="@drawable/ic_back_white"
                android:drawablePadding="@dimen/dp_8"
                android:gravity="center|start"
                android:text="@string/leave_the_group"
                android:textColor="@color/orange_900"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>

    </LinearLayout>

</layout>