<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <include
            android:id="@+id/time"
            layout="@layout/item_time_header_message" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp_16"
            android:paddingTop="@dimen/dp_4"
            android:paddingEnd="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_4"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:background="@drawable/bg_main_notification"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/dp_8"
                tools:ignore="UselessParent">

                <ImageView
                    android:id="@+id/ivLead"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_gravity="center"
                    android:background="@drawable/border_online"
                    android:padding="@dimen/dp_4"
                    android:src="@drawable/ic_key_main"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/ivDeputy"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_gravity="center"
                    android:background="@drawable/border_online"
                    android:padding="@dimen/dp_4"
                    android:src="@drawable/ic_key_deputy"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/ivRemoveDeputy"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_gravity="center"
                    android:background="@drawable/border_online"
                    android:padding="@dimen/dp_4"
                    android:src="@drawable/ic_remove_deputy"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/ivConfirmMember"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_gravity="center"
                    android:padding="@dimen/dp_4"
                    android:src="@drawable/ic_update_group_name"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/llAvatarOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingEnd="@dimen/dp_4"
                    android:visibility="gone"
                    tools:ignore="RtlSymmetry">

                    <ImageView
                        android:id="@+id/ivAvatarOne"
                        android:layout_width="@dimen/dp_18"
                        android:layout_height="@dimen/dp_18"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_circle_stroke_primary"
                        android:padding="@dimen/dp_1"
                        android:src="@drawable/ic_user_default"
                        android:visibility="visible" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llAvatarTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:visibility="gone"
                    tools:ignore="RtlSymmetry">

                    <ImageView
                        android:id="@+id/ivAvatarOneTwo"
                        android:layout_width="@dimen/dp_18"
                        android:layout_height="@dimen/dp_18"
                        android:layout_gravity="center"
                        android:layout_marginEnd="-4dp"
                        android:background="@drawable/bg_circle_stroke_primary"
                        android:padding="@dimen/dp_1"
                        android:src="@drawable/ic_user_default"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/ivAvatarTwoTwo"
                        android:layout_width="@dimen/dp_18"
                        android:layout_height="@dimen/dp_18"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_circle_stroke_primary"
                        android:padding="@dimen/dp_1"
                        android:src="@drawable/ic_user_default"
                        android:visibility="visible" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llAvatarThree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:gravity="center"
                    android:visibility="gone"
                    tools:ignore="RtlSymmetry">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        tools:ignore="UselessParent">

                        <ImageView
                            android:id="@+id/ivAvatarOneThree"
                            android:layout_width="@dimen/dp_18"
                            android:layout_height="@dimen/dp_18"
                            android:layout_gravity="center"
                            android:layout_marginBottom="-4dp"
                            android:background="@drawable/bg_circle_stroke_primary"
                            android:padding="1dp"
                            android:src="@drawable/ic_user_default"
                            android:visibility="visible" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/ivAvatarTwoThree"
                                android:layout_width="@dimen/dp_18"
                                android:layout_height="@dimen/dp_18"
                                android:layout_marginEnd="-4dp"
                                android:background="@drawable/bg_circle_stroke_primary"
                                android:padding="@dimen/dp_1"
                                android:src="@drawable/ic_user_default"
                                android:visibility="visible" />

                            <ImageView
                                android:id="@+id/ivAvatarThreeThree"
                                android:layout_width="@dimen/dp_18"
                                android:layout_height="@dimen/dp_18"
                                android:layout_toEndOf="@+id/ivAvatarTwoThree"
                                android:background="@drawable/bg_circle_stroke_primary"
                                android:padding="@dimen/dp_1"
                                android:src="@drawable/ic_user_default"
                                android:visibility="visible" />

                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/tvNotificationAddUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:breakStrategy="simple"
                    android:gravity="center_horizontal"
                    android:textColor="@color/color_text_chat"
                    android:textColorLink="@color/color_text_chat"
                    android:textSize="@dimen/sp_10"
                    tools:text="Nội dung thông báo, message hệ thống." />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</layout>